<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:showIn="@layout/activity_detail"
    tools:context="com.ramesh.popularmovies.DetailActivityFragment"
    >
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/movie_title"
        android:maxLines="2"
        android:text="Title"
        android:textStyle="bold"
        android:gravity="left"
        android:layout_marginLeft="10dp"
        android:ellipsize="end"/>

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/poster"
        android:src="@drawable/ic_launcher"
        android:layout_below="@+id/movie_title"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/overview"
        android:layout_alignLeft="@+id/movie_title"
        android:layout_below="@+id/poster"
        android:layout_marginTop="20dp"
        android:textSize="18sp"
        android:ellipsize="end"
        android:text="OverView"/>

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/overview"
        android:layout_centerHorizontal="true"
        android:stretchColumns="*"
        android:layout_marginTop="20dp">

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                style="@style/MyColumnLayout"
                android:text="Rating"
                />
            <TextView
                style="@style/MyColumnLayout"
                android:textStyle="bold"
                android:text="Movie Rating"
                android:id="@+id/movie_rating"
                />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >
            <TextView
                style="@style/MyColumnLayout"
                android:text="Release Date"
                />
            <TextView
                style="@style/MyColumnLayout"
                android:textStyle="bold"
                android:text="Movie Name"
                android:id="@+id/release_date"
                />
        </TableRow>
    </TableLayout>
</RelativeLayout>
</ScrollView>